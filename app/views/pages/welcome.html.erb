<% @posts.reverse.each do |post| %>

<p>
<h2><%= link_to "#{post.title}", post %></h2>
</p>
<p>
  <%= truncate(post.content, length: 300) %>
</p>
<p>
  <%= link_to (image_tag post.image.url, :class => "welcome_image"), post %>
</p>
<p class="text-muted">
  <small>
     Posted on <%= post.created_at.to_formatted_s(:long) %>
  </small>  
  <small class="pull-right">
     <%= post.hearts.count %> hearts
  </small>
</p>

<br>
<br>

   <% end %>
       